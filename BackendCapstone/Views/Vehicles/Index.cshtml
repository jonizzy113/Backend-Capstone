@model BackendCapstone.Models.ViewModels.VehicleIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">

    <tbody>
        @foreach (var item in Model.Vehicles)
        {
            @if (Model.IsOffice == true)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Make)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mileage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrokerPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Broker.FullName)
                    </td>
                    <td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.VehicleId">Edit</a>   |
                        <a asp-action="Details" asp-route-id="@item.VehicleId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.VehicleId">Delete</a>
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Make)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mileage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrokerPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Broker.FullName)
                    </td>
                    <td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.VehicleId">Details</a> |
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
