@model BackendCapstone.Models.ViewModels.SalesmanIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Salesman</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Salesman[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salesman[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salesman[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salesman[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Salesman)
        {
            @if (Model.IsOffice == true)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                    </td>
                </tr>
            }
            else
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
