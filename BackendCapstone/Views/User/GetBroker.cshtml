@model BackendCapstone.Models.ViewModels.BrokerIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Brokers</h1>

<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Broker[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Broker[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Broker[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Broker[0].Email)
            </th>
            <th></th> 
               
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Broker)
        {
            @if (Model.IsOffice == true)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
